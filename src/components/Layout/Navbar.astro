<style>
	header {
		padding: 30px 60px;
		display: flex;
		justify-content: center;
	}
	nav {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 70px;
		background-color: rgba(0, 0, 0, 0.5);
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4); /* Sombra para darle profundidad */
		border-radius: 30px;
		width: min-content;
		border: 1px solid #ccc;
		padding: 10px 40px;
		margin: 0 auto;
	}
	ul {
		list-style: none;
		display: flex;
		gap: 20px;
		font-weight: 650;
		font-size: 18px;
		color: rgb(255, 255, 255);
	}
	.list {
		position: relative;
		color: white;
		text-decoration: none;
		transition: 2s ease;

	}
	.list :hover {
		color:chartreuse
	}
	
</style>
